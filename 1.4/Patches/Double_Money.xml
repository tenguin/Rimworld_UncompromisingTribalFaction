<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <!-- Additional money is needed to afford the new smokebombs and VAE Accessories:
  2x the ApparelMoney and WeaponMoney, Adjust item quality for some units -->
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/PawnKindDef[defName="Tribal_Breacher"]/itemQuality</xpath>
